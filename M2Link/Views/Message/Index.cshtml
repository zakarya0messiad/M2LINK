@model List<M2Link.Entities.Message>

@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Mes messages</li>
    </ol>
</nav>
<br>

@Html.ActionLink("Créer un nouveau message", "Create", "Message", new { @class = "btn btn-outline-primary btn-lg", @role = "button" })
<br>
<br>
<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th scope="col">Date de publication</th>
            <th scope="col">Contenu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model)
        {
            <tr>
                <td>@msg.PostDate</td>
                <td>@msg.Content</td>
            </tr>
        }
    </tbody>
</table>

